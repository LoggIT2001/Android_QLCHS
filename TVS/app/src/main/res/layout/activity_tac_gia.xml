<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tg"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".TacGiaActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logoptit"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/edIdTacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã tác giả" />

    <EditText
        android:id="@+id/edTenTacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên tác giả" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnAddTacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addTacGia"
            android:text="Lưu"
            android:layout_marginRight="6dp"
            />

        <Button
            android:id="@+id/btnCancelTacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Huỷ" />
    </LinearLayout>

    <Button
        android:id="@+id/btnShowTacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showTacGia"
        android:text="show" />


</LinearLayout>